<Page x:Class="RegAndAuto.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegAndAuto"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel>
            <TextBlock FontSize="18" HorizontalAlignment="Center">Страница регистрации</TextBlock>
            <GroupBox Header="Введите ФИО">
                <TextBox Width="350" HorizontalAlignment="Left" Name="TBName"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите логин">
                <TextBox Width="350" HorizontalAlignment="Left" Name="TBLogin"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Width="350" HorizontalAlignment="Left" Name="TBPassword"></PasswordBox>
            </GroupBox>
            <Button Name="BtnReg" Width="400" Click="BtnReg_Click">Зарегистироваться</Button>
            <Button Width="400" Click="Button_Click" >Перейти на главную страницу</Button>
        </StackPanel>
    </Grid>
</Page>
