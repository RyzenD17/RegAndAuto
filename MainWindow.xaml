<Window x:Class="RegAndAuto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegAndAuto"
        mc:Ignorable="d"
        Title="RegAuto" Height="500" Width="1000" MinHeight="400" MinWidth="800" Background="#FFB9CEFD">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="26" HorizontalAlignment="Center">Регистрация и авторизация</TextBlock>
        <StackPanel Grid.Column="1" Grid.Row="0"> 
            <Button Name="BAuto" Height="30" Margin="5,0,5,1" Click="BAuto_Click" >Вход</Button>
            <Button Name="BReg" Height="30" Margin="5,1,5,0" Click="BReg_Click">Регистрация</Button>
        </StackPanel>
        <Frame Name="FrmMain" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
